{
  "name": "koa-blueprint",
  "version": "1.0.1",
  "description": "Basic Koa blueprint for modern backends.",
  "main": "index.js",
  "scripts": {
    "build": "ttsc --build && tsc-alias",
    "start": "TZ='UTC' node build/server.js",
    "dev": "TZ='UTC' ts-node-dev --exit-child -r tsconfig-paths/register src/server.ts",
    "check": "ttsc --traceResolution",
    "test": "npm run build && run-p -r start run-tests",
    "run-tests": "uvu -r tsm tests",
    "fmt": "eslint src/ --fix",
    "swagger-autogen": "npm run build && node build/swagger.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazzkiq/koa-blueprint.git"
  },
  "keywords": [
    "koa",
    "backend",
    "api"
  ],
  "author": "Claudio Holanda Jr.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kazzkiq/koa-blueprint/issues"
  },
  "homepage": "https://github.com/kazzkiq/koa-blueprint#readme",
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "dotenv": "^16.0.3",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.0",
    "koa2-swagger-ui": "^5.7.0",
    "swagger-autogen": "^2.23.1",
    "ts-node": "^10.9.1",
    "tsm": "^2.3.0",
    "typescript": "^4.9.5",
    "uvu": "^0.5.6"
  },
  "devDependencies": {
    "@types/koa": "^2.13.6",
    "@types/koa__cors": "^4.0.0",
    "@types/koa__router": "^12.0.0",
    "@types/koa-bodyparser": "^4.3.10",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths": "^4.2.0"
  }
}
