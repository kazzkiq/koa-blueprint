{
  "name": "koa-blueprint",
  "version": "1.0.0",
  "description": "Basic Koa blueprint for modern backends.",
  "main": "index.js",
  "scripts": {
    "build": "tsc --build && tsc-alias",
    "start": "TZ='UTC' node build/server.js",
    "dev": "TZ='UTC' ts-node-dev --exit-child -r tsconfig-paths/register src/server.ts",
    "check": "tsc --traceResolution",
    "test": "jest --maxWorkers=1 --verbose",
    "fmt": "eslint src/ --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazzkiq/koa-blueprint.git"
  },
  "keywords": [
    "koa",
    "backend",
    "api"
  ],
  "author": "Claudio Holanda Jr.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kazzkiq/koa-blueprint/issues"
  },
  "homepage": "https://github.com/kazzkiq/koa-blueprint#readme",
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "dotenv": "^16.0.3",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/koa": "^2.13.6",
    "@types/koa__cors": "^4.0.0",
    "@types/koa__router": "^12.0.0",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths": "^4.2.0"
  }
}
